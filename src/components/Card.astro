<article
	class="flex flex-col justify-between card card-body w-[32rem] bg-slate-800 text-white shadow-xl flex-none mx-5 border-white border-4"
>
	<blockquote class="whitespace-pre-wrap"><p>{Astro.props.quote}</p></blockquote>
	<footer class="flex justify-between items-center">
		<div class="flex flex-col"><address>{Astro.props.name}</address><p>{Astro.props.title}</p></div>
		<div class="avatar">
			<div class="w-24 rounded-full ring ring-white">
				<img src={Astro.props.imagepath} alt={"Picture of " + Astro.props.name} />
			</div>
		</div>
	</footer>
</article>
