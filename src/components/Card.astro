<div class="card w-[32rem] bg-slate-800 text-white shadow-xl flex-none mx-5 border-white border-4">
	<div class="card-body">
		<p class="whitespace-pre-wrap">{Astro.props.quote}</p>
		<div class="card-actions flex justify-between items-center">
			<div class="flex flex-col"><b>{Astro.props.name}</b><p>{Astro.props.title}</p></div>
			<div class="avatar">
				<div class="w-24 rounded-full ring ring-white">
					<img src={Astro.props.imagepath} />
				</div>
			</div>
		</div>
	</div>
</div>
