---
import { Image } from "astro:assets";
---

<article
	class="flex flex-col justify-between card card-body w-96 bg-secondary text-white shadow-xl flex-none mx-5 border-white border-4 lg:w-[32rem]"
>
	<blockquote class="whitespace-pre-wrap">{Astro.props.quote}</blockquote>
	<footer class="flex justify-between items-center">
		<div class="flex flex-col w-44 whitespace-normal">
			<h3 class="font-bold">{Astro.props.name}</h3><p class="text-sm">
				{Astro.props.title}
			</p>
		</div>
		<div class="avatar">
			<div class="w-24 rounded-full ring ring-white">
				<Image src={Astro.props.imagepath} alt={"Picture of " + Astro.props.name} />
			</div>
		</div>
	</footer>
</article>
