---
import CardGallery from "../components/CardGallery.astro";
import Morpher from "../components/Morpher";
import MainLayout from "../layouts/MainLayout.astro";
import "../components/misc.css";
import Benefits from "../components/Benefits.astro";
---

<MainLayout>
	<div class="bg-meander_dark bg-[length:25px] bg-repeat-x flex items-center pb-5 min-h-[80vh]">
		<div>
			<h1 class="text-[7vw] pl-2 text-black font-[Poppins]">The New Constitution</h1>
			<Morpher client:load />
		</div>
		<div class="w-full text-center mt-[40px]">
			<img src="/justice.svg" class="noselect object-contain w-2/3 mx-auto" alt="Lady justice" />
			<p class="italic mt-3 font-thin">Creating the foundation of a better future.</p>
		</div>
	</div>
	<Benefits />
	<div class="h-96"></div>
	<CardGallery />
</MainLayout>
